class Solution {
public:

    int solve(vector<vector<int>>& grid, int m, int n){

        if(m == 0 && n == 0) return grid[m][n];
        if(m < 0 || n < 0) return 1e8;

        int ans;
        int up = grid[m][n] + solve(grid, m - 1, n);
        int left = grid[m][n] + solve(grid, m, n - 1);

        ans = min(up, left);
        return ans;

    }

    int solveMem(vector<vector<int>>& grid, int m, int n, vector<vector<int>>& dp){
        if(m == 0 && n == 0) return grid[m][n];
        if(m < 0 || n < 0) return 1e8;

        if(dp[m][n] != -1) return dp[m][n];

        int ans;
        int up = grid[m][n] + solveMem(grid, m - 1, n, dp);
        int left = grid[m][n] + solveMem(grid, m, n - 1, dp);

        ans = min(up, left);
        return dp[m][n] = ans;
    }

    int solveTab(vector<vector<int>>& grid, int m, int n){

        vector<vector<int>> dp(m, vector<int>(n, -1));

        
        for(int i = 0; i < m; i++){
            for(int j = 0; j < n; j++){

                if(i == 0 && j == 0){
                    dp[0][0] = grid[0][0];
                    continue;
                } 

                int up = grid[i][j] + ((i > 0) ? dp[i - 1][j] : 1e8);
                int left = grid[i][j] + ((j > 0) ? dp[i][j - 1] : 1e8);

                dp[i][j] = min(up, left);

            }
        }

        return dp[m - 1][n - 1];

    }

    int solveSO(vector<vector<int>>& grid, int m, int n){

        vector<int> prev(n, 0);

        for(int i = 0; i < m; i++){

            vector<int> temp(n, 0);

            for(int j = 0; j < n; j++){
                
                if(i == 0 && j == 0){
                    temp[j] = grid[0][0];
                    continue;
                } 

                int up = grid[i][j] + ((i > 0) ? prev[j] : 1e8);
                int left = grid[i][j] + ((j > 0) ? temp[j - 1] : 1e8);

                temp[j] = min(up, left);

            }

            prev = temp;

        }

        return prev[n - 1];

    }

    int minPathSum(vector<vector<int>>& grid) {
        
        int m = grid.size();
        int n = grid[0].size();

        //int ans = solve(grid, m - 1, n - 1);

        // vector<vector<int>> dp(m, vector<int>(n, -1));
        // int ans = solveMem(grid, m - 1, n - 1, dp);

        //int ans = solveTab(grid, m, n);

        int ans = solveSO(grid, m, n);
        return ans;

    }
};
