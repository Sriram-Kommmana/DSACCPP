class Solution {
public:
    int solve(vector<int> &nums, int i, int j){
        
        if(i > j) return 0;

        int maxi = INT_MIN;
        for(int k = i; k <= j; k++){
            int ans = nums[k] * nums[i - 1] * nums[j + 1] + solve(nums, i, k - 1) + solve(nums, k + 1, j);
            maxi = max(maxi, ans);
        }
        return maxi;
    }

    int solveMem(vector<int> &nums, int i, int j, vector<vector<int>> & dp){
        
        if(i > j) return 0;

        if(dp[i][j] != -1) return dp[i][j];

        int maxi = INT_MIN;
        for(int k = i; k <= j; k++){
            int ans = nums[k] * nums[i - 1] * nums[j + 1] + solveMem(nums, i, k - 1, dp) + solveMem(nums, k + 1, j, dp);
            maxi = max(maxi, ans);
        }

        return dp[i][j] = maxi;
    }

    int solveTab(vector<int> &nums, int n){

        vector<vector<int>> dp(n + 2, vector<int>(n + 2, 0));

        for(int i = n; i >= 1; i--){
            for(int j = i; j <= n; j++){
                int maxi = INT_MIN;
                for(int k = i; k <= j; k++){
                    int ans = nums[k] * nums[i - 1] * nums[j + 1] + dp[i][k - 1] + dp[k + 1][j];
                    maxi = max(maxi, ans);
                }

                dp[i][j] = maxi;
            }
        }
        return dp[1][n];

    }

    int maxCoins(vector<int>& nums) {

        int n = nums.size();
        nums.push_back(1);
        nums.insert(nums.begin(), 1);
        // int ans = solve(nums, 1, n);

        // vector<vector<int>> dp(n + 1, vector<int>(n + 1, -1));
        // int ans = solveMem(nums, 1, n, dp);
        int ans = solveTab(nums, n);

        return ans;
    }
};
