class Solution {
public:
    void moveZeroes(vector<int>& nums) {
        int j = -1,n = nums.size();
        for(int i = 0; i < n; i++){
            if(nums[i] == 0){
                j = i;
                break;
            }
        }

        if(j == -1) return;

        for(int i = j + 1; i < n; i++){
            if(nums[i] != 0){
                swap(nums[j], nums[i]);
                j++;
            }
        }
    }
};


//1. j keeps track of the position of the next zero to be overwritten.

//2. Once we find the first zero, we begin checking elements after it.

//3. When a non-zero element is found, we swap it with the element at position j, and then move j forward to point to the next zero
