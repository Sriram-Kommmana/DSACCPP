class Solution {
public:
    void sortColors(vector<int>& nums) {
        int i=0, j = nums.size() - 1 ,k=0;
        while(k<=j){
            if(nums[k]==0){
                swap(nums[i],nums[k]);
                k++;
                i++;
            }
            else if(nums[k]==1){
                k++;
            }
            else{
                swap(nums[j],nums[k]);
                j--;
            }
        }

    }
};



// APPROACK YE HAI KI -> TEEN POINTER LE RHE HAIN
// EK JO PURA ARRAY TAVERSE KREGA -> NOT EXACTLY -> BUT J TAK
// EK ZEROES KO FIRST ME ARRANGE KREGA
// AUR EK 2'S KO LAST ME ARRANGE KREGA
