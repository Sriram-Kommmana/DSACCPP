class Solution {
public:
    void reverse(vector<int>& nums, int start, int end){
        while(start <= end){
            swap(nums[start++], nums[end--]);
        }
    }
    void rotate(vector<int>& nums, int k) {
        reverse(nums, 0, nums.size()-1);
        reverse(nums, 0, k-1);
        reverse(nums, k, nums.size()-1);
    }
};



//LEFT ROTATE -> REVERSE SMALL PORTIONS FIRST THEN REVERSE THE WHOLE ARRAY
//RIGHT ROTATE -> REVERSE WHOLE ARRAY FIRST THEN REVERSE SMALL PORTIONS
